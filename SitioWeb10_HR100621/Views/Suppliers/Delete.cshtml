@model SitioWeb10_HR100621.Models.Suppliers

@{
    ViewBag.Title = "Eliminar";
}

<div class="card">
    <div class="card-header">
        <h2 class="card-title">Eliminar Proveedor</h2>
    </div>
    <div class="card-body">
        <h4 class="card-title">¿Estás seguro de que quieres eliminar esto?</h4>

        <div class="card-text">
            <dl class="dl-horizontal">
                <dt>Nombre de la Empresa:</dt>
                <dd>@Html.DisplayFor(model => model.CompanyName)</dd>

                <dt>Nombre de Contacto:</dt>
                <dd>@Html.DisplayFor(model => model.ContactName)</dd>

                <dt>Cargo del Contacto:</dt>
                <dd>@Html.DisplayFor(model => model.ContactTitle)</dd>

                <dt>Dirección:</dt>
                <dd>@Html.DisplayFor(model => model.Address)</dd>

                <dt>Ciudad:</dt>
                <dd>@Html.DisplayFor(model => model.City)</dd>

                <dt>Región:</dt>
                <dd>@Html.DisplayFor(model => model.Region)</dd>

                <dt>Código Postal:</dt>
                <dd>@Html.DisplayFor(model => model.PostalCode)</dd>

                <dt>País:</dt>
                <dd>@Html.DisplayFor(model => model.Country)</dd>

                <dt>Teléfono:</dt>
                <dd>@Html.DisplayFor(model => model.Phone)</dd>

                <dt>Fax:</dt>
                <dd>@Html.DisplayFor(model => model.Fax)</dd>

                <dt>Sitio Web:</dt>
                <dd>@Html.DisplayFor(model => model.HomePage)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="text-center">
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                    @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-default" })
                </div>
            }
        </div>
    </div>
</div>
